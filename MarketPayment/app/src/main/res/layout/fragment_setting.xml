<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/my_window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="40dp"
            android:elevation="16dp">
            <TextView
                android:id="@+id/txtAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/green_dark" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="12sp"
            android:textColor="@color/gray_600"/>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPickAvtColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/pick_avt_color_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_fill_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/change_nickname_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_edit_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/change_password_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_password_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGiveFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/give_feedback_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_envelope_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNewSeason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/start_new_season_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_timeline_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="start|center_vertical"
            android:elevation="0dp"
            android:text="@string/sign_out_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/black"
            android:background="@drawable/background_button_setting"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>