<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:id="@+id/itemSeasonHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/background_season_history"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="1dp"
            android:layout_marginStart="1dp"
            app:cardCornerRadius="16dp">
            <TextView
                android:id="@+id/txtSeasonId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:background="@color/gray"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">
            <TextView
                android:id="@+id/txtPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="@string/textview_creator"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                    <TextView
                        android:id="@+id/txtCreator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/textview_finisher"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                    <TextView
                        android:id="@+id/txtFinisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </TableRow>
            </TableLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/txtTotalPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_baseline_payment_16" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>