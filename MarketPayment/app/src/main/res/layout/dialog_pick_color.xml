<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_dialog">
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="60dp"
        android:elevation="16dp">
        <TextView
            android:id="@+id/imgColorExample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:background="@color/green_dark" />
    </androidx.cardview.widget.CardView>
    <SeekBar
        android:id="@+id/seekbarRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:max="255"
        android:progress="50"
        android:progressTint="@color/negative"
        android:thumbTint="@color/negative"/>

    <SeekBar
        android:id="@+id/seekbarGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:max="255"
        android:progress="50"
        android:progressTint="@color/positive"
        android:thumbTint="@color/positive"/>
    <SeekBar
        android:id="@+id/seekbarBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:max="255"
        android:progress="50"
        android:progressTint="@color/light_blue_600"
        android:thumbTint="@color/light_blue_600"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="RGB:"/>
        <EditText
            android:id="@+id/edtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:inputType="number"
            android:text="50"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/edtGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:inputType="number"
            android:text="50"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/edtBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:inputType="number"
            android:text="50"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Hex:"/>
        <EditText
            android:id="@+id/edtHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:text="#FFFF"
            android:inputType="textNoSuggestions|textCapCharacters"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:layout_weight="1"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/button_cancel"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/background_button_negative"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:minHeight="55dp"
            android:text="@string/button_ok"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/background_button_positive"/>
    </LinearLayout>
</LinearLayout>